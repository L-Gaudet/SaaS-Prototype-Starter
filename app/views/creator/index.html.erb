<h1>Creator Home</h1>
<div class="w-full p-5">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
  <% end %>
  <div class="flex flex-col gap-10 p-10 mx-auto justify-normal items-center">
    <h1 class="font-bold text-4xl dark:text-white">Total Views: <%= @total_views %></h1>
    <%= link_to "New asset", new_digital_asset_path, class: "rounded-lg py-3 px-5 bg-primary-600 text-white block font-medium" %>
  </div>

  <div id="digital_asset" class="min-w-full">
    <%= render @digital_asset %>
  </div>
</div>