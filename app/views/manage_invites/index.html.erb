<div class="p-10">
  <% flash.each do |type, msg| %>
    <div class="p-4 mb-4 text-sm max-w-fit text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400">
      <span class="font-medium"><%= msg %></span>
    </div>
  <% end %>
  <h1 class="text-2xl font-medium">Manage Invites</h1>
  <%= current_creator.email %>

  <section class="container py-5 flex flex-row flex-wrap gap-5 min-w-fit">
    <% @invitations.each do |invitation|%>
      <div class="w-full max-w-xs bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
          <div class="flex flex-col items-center p-10">
              <%= image_tag 'logo.png', class: 'w-24 h-24 mb-3 rounded-full shadow-lg', alt: 'Brand Logo'%>
              <h5 class="mb-1 text-xl font-medium text-gray-900 dark:text-white"><%=invitation.brand_owner.email%></h5>
              <span class="text-sm text-gray-500 dark:text-gray-400"><%= invitation.id %></span>
              <div class="flex mt-4 md:mt-6">
                  <%= form_tag do %>
                    <%= hidden_field_tag :invite_id, invitation.id%>
                    <%= hidden_field_tag :decision,  "accept"%>
                    <%= submit_tag "Accept", class: "inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
                  <% end %>
                  <%= form_tag do %>
                    <%= hidden_field_tag :invite_id, invitation.id%>
                    <%= hidden_field_tag :decision,  "reject" %>
                    <%= submit_tag "Reject", class: "py-2 px-4 ms-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700" %>
                  <% end %>
                  </div>
          </div>
      </div>

    <% end %>
  </section>
</div>