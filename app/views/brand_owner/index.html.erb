<div class="px-5">
  <h1 class="text-2xl font-medium">Brand Owner Home</h1>

  <section class="container py-5 flex flex-row flex-wrap gap-5 min-w-fit">
    <% @creators.each do |creator| %>
      <div class="w-full max-w-xs bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
              <div class="flex flex-col items-center p-10">
                  <%= image_tag 'logo.png', class: 'w-24 h-24 mb-3 rounded-full shadow-lg', alt: 'Brand Logo'%>
                  <h5 class="mb-1 text-xl font-medium text-gray-900 dark:text-white"><%=creator.email%></h5>
                  <span class="text-sm text-gray-500 dark:text-gray-400"><%= creator.id %></span>
                  <div class="flex mt-4 md:mt-6">
                      <%= form_tag do %>
                        <%= hidden_field_tag :creator_id, creator.id %>
                        <%= submit_tag "See stats", class: "inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
                      <% end %>
                      </div>
              </div>
          </div>
    <% end %>
  </section>
</div>