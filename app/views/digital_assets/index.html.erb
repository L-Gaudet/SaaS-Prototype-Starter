<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex flex-col gap-10">
    <div class="p-10 mx-auto flex justify-normal items-center gap-10">
      <h1 class="font-bold text-4xl dark:text-white">Digital asset</h1>
      <%= link_to "New asset", new_digital_asset_path, class: "rounded-lg py-3 px-5 bg-primary-600 text-white block font-medium" %>
    </div>
    <div>
      <% @digital_asset.each do |asset| %>
        <div>
          <%= asset.name %>
          <%= asset.url %>
          <%= asset.views %>
        </div>
      <% end %>
    </div>
  </div>

  <div id="digital_asset" class="min-w-full">
    <%= render @digital_asset %>
  </div>
</div>
